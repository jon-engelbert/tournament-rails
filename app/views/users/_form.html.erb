<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <% if @user.provider.blank? %>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>
        </div>
      <% end %>
      <div class="field">
        <% if @is_admin %>
          <%= f.label :admin %>
          <%= f.check_box :admin %>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "Update my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
