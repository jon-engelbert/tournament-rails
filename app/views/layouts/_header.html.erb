<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Tournament Manager", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Tournaments",   tourneys_path %></li>
        <li><%= link_to "Players",   players_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to('Edit registration', edit_user_registration_path) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="dropdown" id="Data" data-client="<%= @googleClientId %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Log in", new_user_session_path %></li>
              <li><%= link_to('Register', new_user_registration_path)  %></li>
            </ul>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
